<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
	id="WebApp_ID" version="4.0">
	<display-name>Hospital</display-name>



	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>

	<servlet>
		<servlet-name>LoginServlet</servlet-name>
		<servlet-class>com.nt.LoginServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>LoginServlet</servlet-name>
		<url-pattern>/login</url-pattern>
	</servlet-mapping>



	<servlet>
		<servlet-name>addPatient</servlet-name>
		<servlet-class>com.nt.AddPatientServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>addPatient</servlet-name>
		<url-pattern>/add</url-pattern>
	</servlet-mapping>


	<servlet>
		<servlet-name>UpdatePatient</servlet-name>
		<servlet-class>com.nt.UpdatePatientServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>UpdatePatient</servlet-name>
		<url-pattern>/Update</url-pattern>
	</servlet-mapping>



	<servlet>
		<servlet-name>DeletePatient</servlet-name>
		<servlet-class>com.nt.DeletePatientServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>DeletePatient</servlet-name>
		<url-pattern>/Delete</url-pattern>
	</servlet-mapping>


	<servlet>
		<servlet-name>ShowAllPatient</servlet-name>
		<servlet-class>com.nt.ShowAllServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>ShowAllPatient</servlet-name>
		<url-pattern>/showAll</url-pattern>
	</servlet-mapping>





	<servlet>
		<servlet-name>Add</servlet-name>
		<servlet-class>com.nt.HrAddServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Add</servlet-name>
		<url-pattern>/DrAdd</url-pattern>
	</servlet-mapping>


	<servlet>
		<servlet-name>update</servlet-name>
		<servlet-class>com.nt.HrUpdateServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>update</servlet-name>
		<url-pattern>/DrUpdate</url-pattern>
	</servlet-mapping>



	<servlet>
		<servlet-name>Delete</servlet-name>
		<servlet-class>com.nt.HrDeleteServelet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Delete</servlet-name>
		<url-pattern>/HrDelete</url-pattern>
	</servlet-mapping>


	<servlet>
		<servlet-name>DrDataShow</servlet-name>
		<servlet-class>com.nt.HrShowAllServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>DrDataShow</servlet-name>
		<url-pattern>/DrshowAll</url-pattern>
	</servlet-mapping>


</web-app>